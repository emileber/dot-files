[credential]
	helper = manager
[user]
	name = Emile Bergeron
[user]
	email = emile.bergeron@solutionstlm.com
[merge]
	tool = kdiff3
[diff]
	guitool = kdiff3
[core]
	autocrlf = false
	excludesfile = ~/.gitignore_global
	eol = lf
[push]
	default = simple
[alias]
	# Viewing shortcuts
	s = status
	loc = !git ls-files | xargs cat | wc -l
	dlc = diff --cached HEAD^
	f = !git ls-files | grep -i
	grep = grep -Ii
	l = log --graph --abbrev-commit --decorate --all --date=short --date-order --format=format:'%C(yellow)%h%C(reset) %C(bold blue)%ad%C(reset)%C(auto)%d%C(reset) %C(bold white)%s%C(reset)%C(magenta) - %an%C(reset)'
	stat = quick-stats

	# Dangerous commands
	bring = fetch origin
	cam = commit -am
	squash = "!f() { base=${1:-2}; git reset --soft $base~1 && git commit --edit -m \"$(git log --format=%B --reverse HEAD..HEAD@{1})\"; }; f"
	fixup = "!f() { base=${1:-2}; git reset --soft $base~1 && git commit -C $base; }; f"

	# list aliases
	la = !git config -l | grep alias | cut -c 7-

	# assume-unchanged shortcut
	hidden = !git ls-files -v | grep "^[[:lower:]]"
	hide = update-index --assume-unchanged
	unhide = update-index --no-assume-unchanged
	quick-stats = ! /usr/local/bin/git-quick-stats
